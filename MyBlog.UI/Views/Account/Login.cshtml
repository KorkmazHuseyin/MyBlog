@model MyBlogCore.Entities.Login
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <title>Blog Sayfam</title>
</head>
<body>
    <div class="container">
        <br />
        <div class="row">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/HomePage/Home">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Giriş Sayfası</li>
                </ol>
            </nav>
            <div class="col-md-8">
                <!-- Makale Listesi-->
                <div class="img-thumbnail">
                    <br />
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row" }))
                    {                        
                        <div class="row mb-3" style="text-align:center">
                            <label class="col-sm-2 col-form-label">    Kullanıcı Adı </label>
                            <div class="col-sm-4">
                                @Html.EditorFor(a => a.UserName, new { htmAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                            </div>

                        </div>                       
                        <div class="row mb-3" style="text-align:center">
                            <label class="col-sm-2 col-form-label">    Şifre </label>
                            <div class="col-sm-4">
                                @Html.EditorFor(a => a.Password, new { htmAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="row mb-3" style="text-align:center">
                            <label class="col-sm-2 col-form-label">    </label>
                            <div class="col-sm-4">
                                <button type="submit" class=" btn btn-outline-success col-6"> <i class="bi bi-box-arrow-in-right"></i> Giriş  </button>
                            </div>
                        </div>
                    }
                </div>


            </div>
            <div class="col-md-4">
                <!-- Kategori Listesi-->
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                        Tüm Kategoriler
                    </a>
                    <a href="#" class="list-group-item list-group-item-action"> Kategori A </a>
                    <a href="#" class="list-group-item list-group-item-action"> Kategori B </a>
                    <a href="#" class="list-group-item list-group-item-action"> Kategori C </a>
                </div>
                <br />
                <h6 style="color:darkblue">  En Çok Okunan Makaleler  </h6>
                <div class="card mb-3" style="max-width: 355px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/Images/coding.jpg" class="img-fluid rounded-start" alt="..." width="150" height="150">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="card-text"> Başlık </p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <small class="text-body-secondary"><i class="bi bi-clock" style="font-size:20px"></i> Tarih--<i class="bi bi-eye" style="font-size:20px"></i> 10 Görüntüleme </small>
                        </div>
                    </div>
                </div>
                <div class="card mb-3" style="max-width: 355px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/Images/coding2.jpg" class="img-fluid rounded-start" alt="..." width="150" height="150">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="card-text"> Başlık </p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <small class="text-body-secondary"><i class="bi bi-clock" style="font-size:20px"></i> Tarih--<i class="bi bi-eye" style="font-size:20px"></i> 10 Görüntüleme </small>
                        </div>
                    </div>
                </div>
                <div class="card mb-3" style="max-width: 355px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/Images/coding3.jpg" class="img-fluid rounded-start" alt="..." width="150" height="150">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="card-text"> Başlık </p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <small class="text-body-secondary"><i class="bi bi-clock" style="font-size:20px"></i> Tarih--<i class="bi bi-eye" style="font-size:20px"></i> 10 Görüntüleme </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

