<!doctype html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <title>Blog Sayfam</title>
</head>
<body>
    <header>
        <!-- Menu Bar-->
        <div class="container">
            <br />
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/HomePage/Home">                       
                        <img src="/Images/blog.png" alt="Alternate Text" width="70" height="70" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Arama" aria-label="Search">
                            <button class="btn btn-outline-success col-sm-4" type="submit"><i class="bi bi-search"></i>Ara</button>
                        </form>
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Admin Paneli</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Kullanıcı Adı</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Profilim</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-success" aria-current="page" href="#"> <i class="bi bi-person-add"></i> Üye Ol</a>
                                <a class="btn btn-outline-primary" aria-current="page" href="#"> <i class="bi bi-box-arrow-in-right"></i> Giriş</a>
                                <a class="btn btn-outline-info" aria-current="page" href="#"><i class="bi bi-pencil"></i> Yazar Ol</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </div>
    </header>
    @RenderBody()
    <footer>
        <!--Footer-->
        <div class="container">
            <br />
            <div class="row" style="background-color:black">

                <div class="col-md-1">

                </div>
                <div class="col-md-8">
                    <h6 style="color:white; padding: 15px 0px 0px 0px;">    İletişim   </h6>
                    <ul class="list-unstyled">
                        <li>
                            <a href="#" style="color:white; text-decoration:none"> Giriş</a>
                        </li>
                        <li>
                            <a href="#" style="color:white; text-decoration:none"> Üye Ol</a>
                        </li>

                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 style="color:white; padding: 15px 0px 0px 0px;">    Sosyal Medya   </h6>
                    <ul class="list-unstyled">
                        <li>
                            <a href="#">

                                <img src="/Images/facebookPhoto.png" alt="Alternate Text" width="40" />
                            </a>
                            <a href="#">

                                <img src="/Images/x.png" alt="Alternate Text" width="55" />
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>









